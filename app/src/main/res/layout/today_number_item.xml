                   android:layout_width="fill_parent"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_height="30dp">
                   <TextView
                       android:id="@+id/tv_12"
                       android:layout_width="fill_parent"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="12sp"/>

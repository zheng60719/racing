<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/view_history_lottery_toolbar"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:text="第"/>
        <TextView
            android:id="@+id/tv_qishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="距离开奖"/>
        <TextView
            android:id="@+id/tv_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bg_indicator_point_selected"></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffe5e5e5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="7"
            android:text="期号"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="冠"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="亚"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="三"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="四"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="五"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="六"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="七"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="八"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="九"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="8"
            android:text="十"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="7"
            android:text="时间"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_indicator_point_selected"></View>
        <com.racing.widget.LoadMoreRecyclerView
            android:id="@+id/recycler_history_hottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.racing.widget.LoadMoreRecyclerView>
</LinearLayout>

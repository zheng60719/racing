<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.racing">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".racing.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主界面-->
        <activity
            android:name=".racing.Account1Activity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <!--今日号码-->
        <activity
            android:name=".racing.TodayNumberActivity"
            android:launchMode="singleTask"></activity>
        <!--开奖直播-->
        <activity
            android:name=".racing.LiveLotteryActivity"
            android:launchMode="singleTask"></activity>
        <!--历史开奖-->
        <activity
            android:name=".racing.HistoryLotteryActivity"
            android:launchMode="singleTask"></activity>
        <!--pk10-->
        <activity
            android:name=".racing.Pk10Activity"
            android:launchMode="singleTask"></activity>
        <!--历史分析-->
        <activity
            android:name=".racing.HistoricalStatisticsActivity"
            android:launchMode="singleTask"></activity>
        <!--路珠走势-->
        <activity
            android:name=".racing.TrendActivity"
            android:launchMode="singleTask"></activity>
        <!--冷热分析-->
        <activity
            android:name=".racing.HotColdActivity"
            android:launchMode="singleTask"></activity>
        <!--免费参考-->
        <activity
            android:name=".racing.ReferenceResourcesActivity"
            android:launchMode="singleTask"></activity>
        <!--我的资料-->
        <activity
            android:name=".racing.MyDataActivity"
            android:launchMode="singleTask"></activity>
        <!--积分记录-->
        <activity
            android:name=".racing.IntegralActivity"
            android:launchMode="singleTask"></activity>
        <!--我的收藏-->
        <activity
            android:name=".racing.MyCollectionActivity"
            android:launchMode="singleTask"></activity>
        <!--我的关注-->
        <activity
            android:name=".racing.MyFollowActivity"
            android:launchMode="singleTask"></activity>
        <!--登录界面-->
        <activity
            android:name=".racing.LoginActivity"
            android:launchMode="singleTask"></activity>
        <!--注册-->
        <activity
            android:name=".racing.RegisterActivity"
            android:launchMode="singleTask"></activity>
        <!--忘记密码-->
        <activity
            android:name=".racing.FindPwdActivity"
            android:launchMode="singleTask"></activity>
        <!--修改密码-->
        <activity
            android:name=".racing.UpdatePwdActivity"
            android:launchMode="singleTask"></activity>
        <!--修改密码2-->
        <activity
            android:name=".racing.Find1PwdActivity"
            android:launchMode="singleTask"></activity>
        <!--修改头像-->
        <activity
            android:name=".racing.UpdateTxActivity"
            android:launchMode="singleTask"></activity>
        <!--修改名称-->
        <activity
            android:name=".racing.UpdateNmaeActivity"
            android:launchMode="singleTask"></activity>
        <!--专家列表-->
        <activity
            android:name=".racing.ZhuanJiaActivity"
            android:launchMode="singleTask"></activity>
        <!--专家详情-->
        <activity
            android:name=".racing.ZhuanJiaDetailActivity"
            android:launchMode="singleTask"></activity>
        <!--预测详情-->
        <activity
            android:name=".racing.YuCeDetailActivity"
            android:launchMode="singleTask"></activity>
        <!--我的关注-->
        <activity
            android:name=".racing.FollowActivity"
            android:launchMode="singleTask"></activity>
        <!--发布预测方案-->
        <activity
            android:name=".racing.SendPredictionSchemeActivity"
            android:launchMode="singleTask"></activity>
        <!--我的预测-->
        <activity
            android:name=".racing.MyForecastActivity"
            android:launchMode="singleTask"></activity>
        <!--站内信-->
        <activity
            android:name=".racing.EmailActivity"
            android:launchMode="singleTask"></activity>
        <!--我的预测详情-->
        <activity
            android:name=".racing.MyYuCeDetailActivity"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>